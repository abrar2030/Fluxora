# Fluxora Mobile Frontend Environment Configuration
# Copy this file to .env and update with your actual values

# Backend API Configuration
# For development:
# - Android Emulator: use 10.0.2.2:8000 (localhost alias)
# - iOS Simulator: use localhost:8000
# - Physical Device: use your computer's IP address (e.g., 192.168.1.100:8000)
EXPO_PUBLIC_API_URL=http://10.0.2.2:8000

# For production (when deployed):
# EXPO_PUBLIC_API_URL=https://api.fluxora.com

# API Timeout (in milliseconds)
EXPO_PUBLIC_API_TIMEOUT=10000

# Feature Flags
EXPO_PUBLIC_ENABLE_NOTIFICATIONS=true
EXPO_PUBLIC_ENABLE_OFFLINE_MODE=true
EXPO_PUBLIC_ENABLE_ANALYTICS=true

# Development
EXPO_PUBLIC_ENV=development
