# Ansible Inventory Example
# Copy to hosts.yml and configure with your actual hosts

all:
  children:
    webservers:
      hosts:
        web1:
          ansible_host: 192.168.1.10
          ansible_user: ubuntu
          ansible_ssh_private_key_file: ~/.ssh/your-key.pem
        web2:
          ansible_host: 192.168.1.11
          ansible_user: ubuntu
          ansible_ssh_private_key_file: ~/.ssh/your-key.pem
      vars:
        http_port: 80
        https_port: 443
    
    databases:
      hosts:
        db1:
          ansible_host: 192.168.1.20
          ansible_user: ubuntu
          ansible_ssh_private_key_file: ~/.ssh/your-key.pem
      vars:
        mysql_port: 3306
        redis_port: 6379
    
    production:
      children:
        webservers:
        databases:
      vars:
        env: production
        
    staging:
      hosts:
        staging1:
          ansible_host: 192.168.2.10
          ansible_user: ubuntu
      vars:
        env: staging
