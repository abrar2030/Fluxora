# Fluxora Infrastructure - Example Configuration
# Copy this file to terraform.tfvars and fill in your values

# Environment Configuration
environment = "dev"  # Options: dev, staging, prod
app_name    = "fluxora"

# AWS Configuration
aws_region = "us-west-2"

# Network Configuration
vpc_cidr             = "10.0.0.0/16"
availability_zones   = ["us-west-2a", "us-west-2b", "us-west-2c"]
public_subnet_cidrs  = ["10.0.1.0/24", "10.0.2.0/24", "10.0.3.0/24"]
private_subnet_cidrs = ["10.0.4.0/24", "10.0.5.0/24", "10.0.6.0/24"]

# Compute Configuration
instance_type = "t3.micro"
key_name      = "your-ssh-key-name"  # Optional: SSH key for EC2 instances

# Database Configuration
db_instance_class = "db.t3.micro"
db_name           = "fluxora_db"
db_username       = "admin"  # CHANGE THIS
db_password       = "CHANGE_ME_STRONG_PASSWORD"  # CHANGE THIS - Use AWS Secrets Manager in production

# Tags
default_tags = {
  Terraform   = "true"
  Environment = "dev"
  Project     = "fluxora"
  ManagedBy   = "terraform"
}

# Administrative Access
admin_cidr_blocks = ["10.0.0.0/8"]  # Restrict to specific IPs in production
