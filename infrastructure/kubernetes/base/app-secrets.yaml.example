# Example Secrets Configuration
# DO NOT commit actual secrets to version control
# In production, use external secrets management (e.g., AWS Secrets Manager, Vault)

apiVersion: v1
kind: Secret
metadata:
  name: fluxora-secrets
  namespace: fluxora
type: Opaque
stringData:
  # Database Credentials
  DB_PASSWORD: "CHANGE_ME_STRONG_PASSWORD"
  DB_CONNECTION_STRING: "postgresql://user:password@host:5432/dbname"
  
  # API Keys
  API_SECRET_KEY: "CHANGE_ME_SECRET_KEY"
  JWT_SECRET: "CHANGE_ME_JWT_SECRET"
  
  # External Service Keys
  AWS_ACCESS_KEY_ID: "YOUR_AWS_ACCESS_KEY"
  AWS_SECRET_ACCESS_KEY: "YOUR_AWS_SECRET_KEY"
  
  # Redis
  REDIS_PASSWORD: "CHANGE_ME_REDIS_PASSWORD"

# To create secret from file:
# kubectl create secret generic fluxora-secrets --from-env-file=.env --namespace=fluxora

# To use external secrets operator:
# apiVersion: external-secrets.io/v1beta1
# kind: ExternalSecret
# metadata:
#   name: fluxora-secrets
# spec:
#   refreshInterval: 1h
