# Fluxora Backend Environment Configuration
# Copy this file to .env and update with your values

# Database Configuration
DATABASE_URL=sqlite:///./fluxora.db
# For PostgreSQL, use: postgresql://user:password@localhost:5432/fluxora

# Security
SECRET_KEY=YOUR_SECRET_KEY_HERE_CHANGE_IN_PRODUCTION
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Logging
LOG_LEVEL=INFO

# Feature Store (optional)
FEATURE_STORE_PATH=./config/feature_store

# Model Configuration
MODEL_PATH=./fluxora_model.joblib
MODEL_VERSION=0.1.0
